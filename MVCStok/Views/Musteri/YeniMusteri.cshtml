@model MVCStok.Models.tblMusteriler
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">

    <div>
        <label>Müşteri Adı :</label>
        @Html.TextBoxFor(x=>x.MusteriAd,new {@class="form-control" })
        @Html.ValidationMessageFor(x=>x.MusteriAd,"",new {@style="color:red"})
    </div>
    <div>
        <label>Müşteri Soyadı :</label>
        <input type="text" class="form-control" name="MusteriSoyad" />
    </div>
    <div>
       <button class="btn btn-success" id="btn1">Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri işlemi yapıldı...');
        });
    </script>
</form>

