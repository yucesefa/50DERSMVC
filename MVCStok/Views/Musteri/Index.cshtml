@model List<MVCStok.Models.tblMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-hover">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MusteriID</td>
            <td>@item.MusteriAd</td>
            <td>@item.MusteriSoyad</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-primary">Güncelle</a></td>
        </tr>

    }
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri</a>